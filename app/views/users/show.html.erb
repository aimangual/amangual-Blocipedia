<div class="row">
 <div class="col-md-8">
   <div class="media">
     <% if @user.avatar? %>
       <div class="media-left">
         <%= image_tag @user.avatar.url, class: 'media-object' %>
       </div>
     <% end %>
     <div class="media-body">
       <h2 class="media-heading"><%= @user.name %></h2>
       <small>
         <%= pluralize(@user.wikis.count, 'wiki') %>,
       </small>
     </div>
   </div>
 </div>
</div>

<div class="row">
 <div class="tabbable tabs-left">
   <ul class="nav nav-tabs">
     <li class="active"><a href="#wikis" data-toggle="tab">Wikis</a></li>
   </ul>
   <div class="tab-content">
     <div class="tab-pane active" id="wikis">
       <%= render @wikis %>
     </div>
   </div>
 </div>
</div>